{% extends 'user.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
<div class="container grix xs4">
  <div class="col-xs4">
    <h3>Change password: {{ app.user.name }} {{ app.user.lastname }}</h3>

    {% for message in app.flashes('error') %}
      <p style="display: none;" id="flash">{{ message }}</p>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
      <script>
          // document.getElementById("temp").addEventListener("click", function() {
          const text = document.getElementById("flash").innerHTML;
          Swal.fire({
              position: 'top-end',
              icon: 'error',
              title: text,
              showConfirmButton: false,
              timer: 3000
          })
          //     return false;
          // });
      </script>
    {% endfor %}

    <form method="post">
      <div class="form-field">
        <label for="pass">Password</label>
        <input type="password" name="pass" id="pass" class="form-control rounded-1"  required/>
      </div>
      <div class="form-field">
        <label for="pass2">Confirm password</label>
        <input type="password" name="pass2" id="pass2" class="form-control rounded-1" required/>
      </div>

      <input type="submit" value="Confirm" class="btn btn-success" />

    </form>



  </div>




</div>
{% endblock %}
